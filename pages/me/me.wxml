<!--pages/me/me.wxml-->
<view class='content'>
  <!-- 头部 -->
  <view class='header'>
    <image class='headImg' src='../../image/Group_16@2x.png'></image>
    <view class='headCont'>
      <image src='../../image/Group_15@2x.png' class='headContImg'></image>
      <view class='head_Header'>
        <view class='headInter'>
          <open-data type='userAvatarUrl'></open-data>
          <open-data type='userNickName'></open-data>
        </view>
      </view>

      <view class='account'>
        <view class='all_draw' bindtap='allDraw'>
          <text class='drawTextColor'>{{draw_count}}</text>
          <text class='drawText'>参与抽奖</text>
        </view>
        <view class='all_draw' bindtap='pointRecord'>
          <text class='drawTextColor'>{{integral_count}}</text>
          <text class='drawText'>积分记录</text>
        </view>
        <view class='all_draw' bindtap='winningRecord'>
          <text class='drawTextColor'>{{award_count}}</text>
          <text class='drawText'>中奖记录</text>
        </view>
      </view>

    </view>
  </view>
  <!-- 收货地址/个人信息 -->
  <view class='line'></view>
  <view class='address'>
    <view class='myAddress' bindtap='information'>
      <text>我的信息</text>
      <image src='../../image/Page_1@2x.png'></image>
    </view>
    <button class='myAddress' open-type='contact'>
      <text>联系客服</text>
      <image src='../../image/Page_1@2x.png'></image>
    </button>
  </view>

</view>