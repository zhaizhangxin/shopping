/* pages/page/page.wxss */
page{
  height: 100%;
}
.content{
  /* background: #fff; */
  height: 100%;
}
/* 头部 */
.header{
  position: relative;
  background: #fff; 
}
.headImg{
  width: 100%;
  height: 380rpx;
}
.headCont{
  position: absolute;
  bottom: 0;
  left: 30rpx;
  width: 690rpx;
  height: 280rpx;
}
.headContImg{
  width: 100%;
  height: 100%;
}
.head_Header{
  display: flex;
  justify-content: space-between;
  position: absolute;
  top: -40rpx;
  height: 140rpx;
  line-height: 180rpx;
  width: 100%;
}

.headInter{
  display: flex;
  margin-left: 40rpx;
}
open-data[type=userAvatarUrl]{
  margin-right: 14rpx;
  width: 140rpx;
  height: 140rpx;
  display: block;
  overflow: hidden;
  border-radius: 64rpx;
}
open-data[type=userNickName]{
  font-size:32rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color: #5D6977;
}

.headRule{
  padding: 10rpx 24rpx;
  background:linear-gradient(135deg,rgba(255,226,162,1) 0%,rgba(255,25,70,1) 100%);
  border-radius:30rpx 0 0 30rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  color: #fff;
}

.account{
  margin-top: 42rpx;
  display: flex;
  justify-content: space-around;
  position: absolute;
  bottom: 40rpx;
  width: 100%;
}
.accontText{
  display: block;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color: #999;
}
.accont_money{
  display: flex;
  margin-top: 12rpx;
}
.moneyText{
  font-size:50rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color: #FF646A;
}
.moneyImg{
  margin-left: 10rpx;
  margin-top: 20rpx;
  width: 136rpx;
  height: 32rpx;
}
.integralImg{
  margin-left: 10rpx;
  margin-top: 20rpx;
  width: 104rpx;
  height: 32rpx;
}

/* 全部抽奖 */
.allDraws{
  padding: 0 84rpx 40rpx 84rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;
}
.drawImg{
  margin: auto;
  width: 80rpx;
  height: 80rpx;
  display: block;
}
.all_draw{
  text-align: center;
}
.drawTextColor{
  font-size:36rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color: #F46C2C;
  text-align: center;
}
.drawText{
  margin-top: 14rpx;
  display: block;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color: #5D6977;
  /* font-size:24rpx;
  font-family:PingFangSC-Regular;
  color: #999; */
}
/* 收货地址/个人信息 */
.line{
  width: 100%;
  height: 20rpx;
  background: #f5f5f5;
}
.address{
  background: #fff;
  height: 180rpx;
}
.myAddress{
  margin: 0;
  display: flex;
  justify-content: space-between;
  padding: 34rpx 30rpx;
  background: #fff;
  height: 24rpx;
  line-height: 24rpx;
}
.myAddress::after{
  border: none;
  outline: none;
}
.myAddress text{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  color: #5D6977;
}
.myAddress image{
  width: 10rpx;
  height: 20rpx;
}
