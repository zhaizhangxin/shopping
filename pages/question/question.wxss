.text{
  background-color: #fff;
  margin-bottom:20rpx;
  padding: 20rpx 50rpx;
  text-align: justify;
  line-height: 1.2em;
}
.text:last-of-type{
  margin-bottom: 118rpx;
}
.text-tit{
  font-size: 30rpx;
  color: rgb(51, 51, 51);
  font-weight: bold;
}
.text-con{
  margin-top: 20rpx;
  font-size:24rpx;
  color: rgb(102, 102, 102);
}

button::after{
  border: none;
}
button[open-type=contact]{
  height: 98rpx;
  line-height: 98rpx;
  background-color: rgb(232, 54, 42);
  color: #fff;
  font-size: 30rpx;
  border-radius: 0;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}