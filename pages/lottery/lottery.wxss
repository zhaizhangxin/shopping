/* pages/lottery/lottery.wxss */
page{
  background: #f5f5f5;
}
.content{
  background: #f5f5f5;
}

.section{
  padding: 24rpx 30rpx;
  margin: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;
  border-radius: 20rpx;
}
.sectionTitle{
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color: #333;
  width: 46%;
  line-height: 1.4rem;
}
.section input{
  text-align: right;
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color: #333;
}
.sectionCont input{
  text-align: right;  
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color: #333;
}
.sectionCont textarea{
  width: 60%;
  text-align: right;  
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color: #333;
  height: 100%;
  min-height: 40rpx;
}
.sections{
  margin: 0 30rpx;
  border-radius: 20rpx;
}
.sectionCont{
  padding: 24rpx 30rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;
  border-bottom: 4rpx solid #f5f5f5;
}
.select{
  display: flex;
}
.selectText{
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color: #53A3E8;
}
.seleLogo{
  width: 50rpx;
  height: 50rpx;
}
.selectImg{
  margin-top: 8rpx;
  width: 24rpx;
  height: 24rpx;
  display: block;
}

.input-placeholder{
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color: #BDBCBC;
}

.btn_area button{
  margin:0 30rpx;
  margin-top: 60rpx;
  border-radius: 20rpx;
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  height: 100rpx;
}
.btn1{
  background: #E1E1E1;
}
.btn2{
  background: #FF646A;
}
.btn_area button::after{
  border: none;
  outline: none;
}
.btnText{
  display: block;
  margin-top: 20rpx;
  text-align: center;
  font-size:24rpx;
  font-family:MicrosoftYaHei;
  color: #666;
}
/* 未选中的 背景样式 */
radio .wx-radio-input{
   border-radius: 50%;
   width: 40rpx;
   height: 40rpx;
   border: 1rpx solid #FF646A;
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked{
   border: none;
   background: #FF646A;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before{
   border-radius: 50%;/* 圆角 */
   width: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
   height: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
   line-height: 40rpx;
   text-align: center;
   font-size:30rpx; /* 对勾大小 30rpx */
   color:#fff; /* 对勾颜色 白色 */
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}