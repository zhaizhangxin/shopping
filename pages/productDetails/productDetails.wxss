/* pages/productDetails/productDetails.wxss */
page{
  background: #f5f5f5;
}
.content{
  background: #f5f5f5;
}

.headImg{
  width: 100%;
  height: 342rpx;
  display: block;
}
/* 头部 */
.contDetail{
  padding: 30rpx;
  margin-top: -50rpx;
  margin-left: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  width: 630rpx;
}
.detailName{
  display: flex;
  justify-content: space-between;
}
.shopName{
  font-size:32rpx;
  font-family:MicrosoftYaHei;
  color: #5D6977;
}
.marketPrice{
  font-size:28rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color: #FF646A;
}
.numbers{
  font-size:24rpx;
  font-family:MicrosoftYaHei;
  color: #999;
  display: block;
}
.product_details{
  display: flex;
  margin-top: 20rpx;
}
.product_name{
  display: flex;
}
.product_icon{
  margin-top: 6rpx;
  width: 20rpx;
  height: 20rpx;
}
.product_prod{
  margin-left: 10rpx;
  font-size:22rpx;
  font-family:MicrosoftYaHei;
  color: #999;
}
.product_num{
  margin-left: 10rpx;  
  font-size:22rpx;
  font-family:MicrosoftYaHei-Bold;
  font-weight:bold;
  color: #FF646A;
}
.products_name{
  display: flex;
  margin-left: 60rpx;
}

/* 商品详情 */
.details{
  margin: 20rpx 30rpx 90rpx 30rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  background: #fff;
}
.details_text{
  padding: 30rpx 0;
  text-align: center;
  display: block;
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color: #5D6977;
}
.details image{
  width: 100%;
}

/* 底部悬浮 */
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  line-height: 88rpx;
}
.footer_fot{
  display: flex;
}
.footer_prod{
  width: 450rpx;
  background: #EE6665;
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color: #fff;
  text-align: center;
}
.footer_text{
  width: 300rpx;
  font-size:28rpx;
  background: #fff;
  font-family:MicrosoftYaHei;
  color: #666;
  text-align: center;
}
.footer_prods{
  width: 450rpx;
  background: #CCC;
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color: #fff;
  text-align: center;
}
.footer_texts{
  width: 300rpx;
  font-size:28rpx;
  background: #fff;
  font-family:MicrosoftYaHei;
  color: #666;
  text-align: center;
}

/* 积分兑换弹框 */
.redeemGoodsMask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0,0,0,0.5);
}
.redeemGoods{
  position: fixed;
  padding: 100rpx 30rpx 30rpx 30rpx;
  top: 30%;
  left: 7%;
  z-index: 20;
  background: #fff;
  border-radius: 20rpx;
  width: 570rpx;
}
.redeemGoodsText{
  font-size:38rpx;
  font-family:MicrosoftYaHei-Bold;
  font-weight:bold;
  color: #EE6665;
  display: block;
  text-align: center;
}
.redeemText{
  margin-top: 10rpx;
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color: #666;
  display: block;
  text-align: center;
}
.redeemButs{
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}
.redeen{
  background: #EE6665;
  border-radius: 10rpx;
  font-size:32rpx;
  font-family:MicrosoftYaHei;
  color: #fff;
  width: 200rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
}
.redeenbtn{
  background: #CCC;
  border-radius: 10rpx;
  font-size:32rpx;
  font-family:MicrosoftYaHei;
  color: #666;
  width: 200rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
}